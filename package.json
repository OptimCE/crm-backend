{
  "name": "optimce-crm",
  "version": "1.0.0",
  "description": "OptimCE CRM backend module",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/app.ts",
    "clean": "rimraf dist coverage docs/typedoc",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "npm run test -- --selectProjects unit",
    "test:functional": "npm run test -- --selectProjects functional --runInBand",
    "coverage": "npm run test -- --coverage --runInBand  --max-old-space-size=8192",
    "prebuild": "npm run clean",
    "copy-assets": "copyfiles -u 1 assets/**/* dist/assets",
    "build": "npm run clean && tsc && npm run copy-assets",
    "start": "node dist/src/app.js --es-module-specifier-resolution=node",
    "start:prod": "cross-env NODE_ENV=production npm run start",
    "build-start": "npm run build && npm run start",
    "trace": "cross-env REMOTE_LOGGING=true OTEL_LOGS_EXPORTER=otlp npm run start",
    "swagger": "npx tsx src/swagger/generate-openfile.autogen.ts && npx swagger-jsdoc -d src/swagger/swagger-jsdoc.config.js -o docs/openapi/swagger.yaml",
    "swagger:doc:md": "npx tsx src/swagger/generate-openfile.autogen.ts && npx widdershins docs/openapi/swagger.yaml -o docs/openapi/api-docs.md --language_tabs NodeJS:Typescript --summary --search false",
    "swagger:doc:html": "npx tsx src/swagger/generate-openfile.autogen.ts && npx redoc-cli bundle docs/openapi/swagger.yaml -o docs/index.html --title \"OptimCE CRM API\"",
    "typedoc:md": "typedoc src --out docs/typedoc/markdown --entryPointStrategy expand --name \"OptimCE CRM Backend\" --plugin typedoc-plugin-markdown",
    "typedoc:html": "typedoc src --out docs/typedoc/html --entryPointStrategy expand --name \"OptimCE CRM Backend\"",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint . --ext .ts",
    "lint-quiet": "eslint . --ext .ts --quiet",
    "audit": "npm audit",
    "audit-prod": "npm audit --omit=dev",
    "audit-fix": "npm audit fix"
  },
  "keywords": [],
  "author": "Eric Ugo Paque",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@keycloak/keycloak-admin-client": "^26.4.7",
    "@nestjs/mapped-types": "^2.1.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.3",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "axios": "^1.13.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "config": "^4.1.1",
    "cors": "^2.8.5",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "i18next": "^25.7.4",
    "i18next-fs-backend": "^2.6.1",
    "i18next-http-middleware": "^3.9.2",
    "inversify": "^7.10.8",
    "ioredis": "^5.10.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-opentelemetry-transport": "^2.0.0",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28",
    "xlsx": "^0.18.5",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@redocly/cli": "^2.14.5",
    "@types/config": "^3.3.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.3.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^8.0.0",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "shins": "^2.6.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-json-schema-generator": "^2.4.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "widdershins": "^4.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
